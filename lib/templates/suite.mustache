{{#isSpec}}
    <div class="spec wrapper closed" id="{{id}}">
        <h2 class="{{#allPassed}}green{{/allPassed}}{{^allPassed}}red{{/allPassed}}">
            <a href="#">
                <span class="glyphicon {{#allPassed}}glyphicon-ok green{{/allPassed}}{{^allPassed}}glyphicon-remove red{{/allPassed}}"></span>Test: {{&description}}
                {{#implementationErrorCount}}<span class="imp-error">- Test Implementation Problem</span>{{/implementationErrorCount}}
                <div class="time-taken">{{durationFormatted}}</div>
            </a>
        </h2>
        <div class="content">
            <pre>{{#debugData}}{{{.}}}<br />{{/debugData}}{{^debugData}}No output logged{{/debugData}}</pre>
        </div>
    </div>
{{/isSpec}}


{{^isSpec}}
    <div class="suite wrapper closed" id="{{id}}">
        <h2 class="{{#allPassed}}green{{/allPassed}}{{^allPassed}}red{{/allPassed}}">
            <a href="#">
                <span class="glyphicon {{#allPassed}}glyphicon-ok green{{/allPassed}}{{^allPassed}}glyphicon-remove red{{/allPassed}}"></span>{{&description}}
                <div class="time-taken">{{durationFormatted}}</div>
            </a>
        </h2>
        <p class="summary">
            {{>summary}}
        </p>

        <div class="content">
            {{#viewChildren}}
                {{>suite}}
            {{/viewChildren}}
        </div>
    </div>
{{/isSpec}}